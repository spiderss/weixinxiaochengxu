<view class="login-container"> 
  <view class='logo-item'>
     <image src="../images/asset/logo.png" class='image'/>
  </view>
  <view class='item'>
    <view class='login-item'>
     <view class='login-item-info'>用户名</view>
     <view><input bindinput='userNameInput'/></view>
    </view>
  </view>
   <view class='item'>
    <view class='login-item'>
     <view class='login-item-info'>密码</view>
     <view class='login-pwd'><input bindinput='passWordInput' /></view>
    </view>

    <view class='item'>
    <view class='login-item'>
     <button formType="submit" bindtap="loginBtnClick">登录</button>
    </view>
     
    </view>
  </view>
</view>